{
  "manifest_version": 3,
  "name": "Wiki2Grok",
  "version": "1.0.0",
  "description": "Automatically redirects Wikipedia pages to Grokipedia. For people who never want to see Wikipedia again.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}